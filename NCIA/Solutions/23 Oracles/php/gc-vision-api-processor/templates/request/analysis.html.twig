{% extends 'base.html.twig' %}

{% block title %}Is it propaganda?!{% endblock %}

{% block stylesheets %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
{% endblock stylesheets %}

{% block javascripts %}

{% endblock javascripts %}

{% block body %}

    {% include 'request/_navbar.html.twig' with {'filename': filename}  %}


    <div class="row">
        <div class="col-sm-5">
            <img src="{{ asset(filename) }}" alt="" class="img-fluid">
        </div>
        <div class="col-sm-7">

            {% if output.processed %}
                <h3>Bad Propaganda</h3>
                <div class="progress mb-2" style="height: 20px">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ output.badPropaganda * 100 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{ output.badPropaganda * 100 }}%</div>
                </div>

                <h3>Neutral Propaganda</h3>
                <div class="progress mb-2" style="height: 20px">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ output.neutralPropaganda * 100 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{ output.neutralPropaganda * 100 }}%</div>
                </div>

                <h3>Categories</h3>
                Belonging
                <div class="progress mb-2" style="height: 20px">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ output.categories.belonging.confidence * 100 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{ output.categories.belonging.confidence * 100 }}%</div>
                </div>

                War
                <div class="progress mb-2" style="height: 20px">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ output.categories.war.confidence * 100 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{ output.categories.war.confidence * 100 }}%</div>
                </div>

                Brutality
                <div class="progress mb-2" style="height: 20px">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ output.categories.brutality.confidence * 100 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{ output.categories.brutality.confidence * 100 }}%</div>
                </div>

                Mercy
                <div class="progress mb-2" style="height: 20px">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ output.categories.mercy.confidence * 100 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{ output.categories.mercy.confidence * 100 }}%</div>
                </div>

                {#<h4>Utopia</h4>#}
                {#<div class="progress mb-2" style="height: 20px">#}
                    {#<div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ output.categories.utopia.confidence * 100 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{ output.categories.utopia.confidence * 100 }}%</div>#}
                {#</div>#}

                Victimhood
                <div class="progress mb-2" style="height: 20px">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ output.categories.victimhood.confidence * 100 }}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">{{ output.categories.victimhood.confidence * 100 }}%</div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
